              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/feedback/1/timeline",
              "host": ["{{base_api_url}}"],
              "path": ["feedback", "1", "timeline"]
            },
            "description": "Obține timeline-ul de feedback pentru o activitate (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Get Feedback Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/feedback/1/stats",
              "host": ["{{base_api_url}}"],
              "path": ["feedback", "1", "stats"]
            },
            "description": "Obține statisticile pentru o activitate (Public)"
          },
          "response": []
