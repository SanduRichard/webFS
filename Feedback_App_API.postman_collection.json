{
  "info": {
    "name": "Feedback App API",
    "description": "API endpoints pentru aplicația de feedback în timp real",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "192.168.1.132:3000",
      "type": "string"
    },
    {
      "key": "base_api_url",
      "value": "192.168.1.132:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"teacher\"\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/auth/register",
              "host": ["{{base_api_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Înregistrare utilizator nou (teacher sau student)"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/auth/login",
              "host": ["{{base_api_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Autentificare utilizator (salvează automat token-ul)"
          },
          "response": []
        },
        {
          "name": "Get Current User",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/auth/me",
              "host": ["{{base_api_url}}"],
              "path": ["auth", "me"]
            },
            "description": "Obține datele utilizatorului curent (necesită token)"
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Updated\"\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/auth/me",
              "host": ["{{base_api_url}}"],
              "path": ["auth", "me"]
            },
            "description": "Actualizează profilul utilizatorului"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Activities",
      "item": [
        {
          "name": "Get All Activities",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/activities?status=active",
              "host": ["{{base_api_url}}"],
              "path": ["activities"],
              "query": [
                {
                  "key": "status",
                  "value": "active",
                  "description": "active, ended, sau toate"
                }
              ]
            },
            "description": "Obține toate activitățile profesorului (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Create Activity",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Curs Web Development\",\n  \"description\": \"Introducere în React și Node.js\",\n  \"duration\": 60,\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/activities",
              "host": ["{{base_api_url}}"],
              "path": ["activities"]
            },
            "description": "Creează o activitate nouă (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Get Activity by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/activities/1",
              "host": ["{{base_api_url}}"],
              "path": ["activities", "1"]
            },
            "description": "Obține detaliile unei activități (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Update Activity",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Curs Web Development - Updated\",\n  \"description\": \"Curs avansat React\"\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/activities/1",
              "host": ["{{base_api_url}}"],
              "path": ["activities", "1"]
            },
            "description": "Actualizează o activitate (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Delete Activity",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/activities/1",
              "host": ["{{base_api_url}}"],
              "path": ["activities", "1"]
            },
            "description": "Șterge o activitate (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Join Activity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"ABC123\"\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/activities/join",
              "host": ["{{base_api_url}}"],
              "path": ["activities", "join"]
            },
            "description": "Alătură-te unei activități folosind codul (Public - pentru studenți)"
          },
          "response": []
        },
        {
          "name": "Stop Activity",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/activities/1/stop",
              "host": ["{{base_api_url}}"],
              "path": ["activities", "1", "stop"]
            },
            "description": "Oprește o activitate (Teacher only)"
          },
          "response": []
        },
        {
          "name": "Get Activity Stats",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_api_url}}/activities/1/stats",
              "host": ["{{base_api_url}}"],
              "path": ["activities", "1", "stats"]
            },
            "description": "Obține statisticile unei activități (Teacher only)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Feedback",
      "item": [
        {
          "name": "Submit Feedback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"activityId\": 1,\n  \"rating\": 4,\n  \"comment\": \"Foarte interesant cursul!\"\n}"
            },
            "url": {
              "raw": "{{base_api_url}}/feedback",
              "host": ["{{base_api_url}}"],
              "path": ["feedback"]
            },
            "description": "Trimite feedback pentru o activitate (Public - studenții nu au nevoie de autentificare)"
